<h1>Shopping Cart</h1>
<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <p><%= item.product.title %> | <a href="/order_items/<%= item.id%>">Delete</a></p>
    <p> Unit Price: <%= number_to_currency item.product.price %></p>

    <%= form_for order_item_path do %>
    <%= hidden_field_tag(:product_id, item.id) %>
    <%= number_field(:quantity, item.quantity) %>
    <%= submit_tag("Update") %>
  <% end %>
     <p>Unit Total Price: <%= number_to_currency (item.product.price * item.quantity) %></p>
  <% end %>
  <p>Subtotal: <%= number_to_currency current_order.total_price %></p>
<%= link_to  'checkout', checkout_path%>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
